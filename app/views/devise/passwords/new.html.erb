<div class="ui one column middle center aligned grid container">
  <div class="row"></div> <!-- TODO space between form and flash -->
  <div class="row">

    <div class="sixteen wide mobile eight wide tablet eight wide computer column">

      <h2 class="ui teal image header">
        <%= image_tag("logo.svg", class: "image") %>
        <div class="content">
          forgot your password?
        </div>
      </h2>

      <%= devise_error_messages! %>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:'ui large inverted form attached fluid segment' }) do |f| %>

        <div class="field <%= "error" if resource.errors.details.key? :email %>">
          <div class="ui left icon input">
            <i class="mail icon"></i>
            <%= f.email_field :email, autofocus: true, placeholder: 'email address' %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Send me password reset instructions", class: "ui fluid large teal submit button" %>
        </div>

      <% end %>

      <div class="ui message">
        <%= render "devise/shared/links" %>
      </div>

    </div>

  </div>
</div>
