<div class="ui one column middle center aligned grid container">
  <div class="row"></div>
  <div class="row">

    <div class="sixteen wide mobile eight wide tablet eight wide computer column"><!-- #{no} wide sets width of column -->

      <h2 class="ui teal image header">
        <%= image_tag("logo.svg", class: "image") %>
        <div class="content">
          sign up for an account
        </div>
      </h2>

      <%= devise_error_messages! %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class:'ui large inverted form attached fluid segment' }) do |f| %>

          <div class="field <%= "error" if resource.errors.details.key? :email %>">
            <div class="ui left icon input">
              <i class="mail icon"></i>
              <%= f.email_field :email, autofocus: true, placeholder: 'email address' %>
            </div>
          </div>

          <div class="field <%= "error" if resource.errors.details.key? :password %>">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <% if @minimum_password_length %>
                <%= f.password_field :password, autocomplete: "off", placeholder: "password (#{@minimum_password_length} characters minimum)" %>
              <% else %>
                <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
              <% end %>
           </div>
          </div>

          <div class="field <%= "error" if resource.errors.details.key? :password_confirmation %>">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'password confirmation' %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "ui fluid large teal submit button" %>
          </div>

      <% end %>

      <div class="ui message">
        <%= render "devise/shared/links" %>
      </div>

    </div>

  </div>
</div>
