<div class="ui centered raised teal card">
  <div class="content">
    <%= link_to edit_insurer_path @insurer do %>
      <div class="ui teal circular basic icon button right floated" data-tooltip="Edit policy info" data-inverted="">
        <i class="write icon"></i>
      </div>
    <% end %>
    <div class="header">
      <%= @insurer.name %>
    </div>
    <div class="meta">
      <%= @insurer.full_legal_name %>
    </div>
  </div>

  <div class="content">
    <div class="ui list">
      <div class="item">
        <i class="building icon"></i>
        <div class="content">
          <%= @insurer.address %>
        </div>
      </div>
      <div class="item">
        <i class="mail icon"></i>
        <div class="content">
          <%= @insurer.email_address %>
        </div>
      </div>
      <div class="item">
        <i class="call icon"></i>
        <div class="content">
          <%= @insurer.phone_number %>
        </div>
      </div>
    </div>
  </div>
</div>
