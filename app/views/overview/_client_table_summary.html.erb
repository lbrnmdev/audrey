<div class="ui top attached clearing segment">
  <h3 class="ui left floated header">
      <i class="users icon"></i>
      <div class="content">
        Clients
        <div class="sub header">
          Showing <b><%= clients.take(5).count %></b> of <b><%= pluralize(clients.count, 'client') %></b>
        </div>
      </div>
  </h3>
  <%= link_to new_client_path do %>
    <div class="ui teal circular basic icon large button right floated" data-tooltip="add new client" data-inverted="" data-position="bottom center">
      <i class="plus icon"></i>
    </div>
  <% end %>
</div>

<div class="ui bottom attached segment">
  <table class="ui unstackable selectable teal fixed single line very basic small table">
    <thead>
      <tr>
        <th>Lastname</th>
        <th>Other names</th>
        <th class="right aligned">Telephone</th>
      </tr>
    </thead>
    <tbody>
      <% if clients.any? %>
        <% clients.take(5).each do |client| %>
          <tr>
            <td class="selectable"><%= link_to client.lastname, client %></td>
            <td class="selectable"><%= link_to(client.other_names, client) || '-' %></td>
            <td class="selectable right aligned"><%= link_to(client.telephone, client) || '-' %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="3" class="center aligned">you currently don't have any client info, <%= link_to 'add a new client', new_client_path %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot class="full-width">
      <tr>
        <th colspan="3">
          <h4 class="ui right floated header">
            <%= link_to 'all clients...', clients_path %>
          </h4>
        </th>
      </tr>
    </tfoot>
  </table>
</div>
