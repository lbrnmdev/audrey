<div class="ui container">
  <% if !@insurers.any? %>
    <div class="ui inverted yellow segment">
      <h2 class="ui header">
        <i class="warning icon"></i>
        <div class="content">
          You need to have at least 1 insurer in the system
          <div class="sub header">
            <%= link_to 'Click here to add a new insurer', new_insurer_path %>
          </div>
        </div>
      </h2>
    </div>
    <div class="ui divider"></div>
  <% end %>
  <%= render 'revenue/total_revenue_summary' %>
  <div class="ui hidden divider"></div>
  <div class="ui two column stackable grid">
    <div class="column">
      <h3 class="ui horizontal divider header">
        <i class="address book outline icon"></i>
        Clients & Policies
      </h3>
      <%= render 'policy_table_summary', policies: @policies %>
      <div class="ui hidden divider"></div>
      <%= render 'client_table_summary', clients: @clients %>
    </div>
    <div class="column">
      <h3 class="ui horizontal divider header">
        <i class="home icon"></i>
        Assets
      </h3>
      <%= render 'vehicle_table_summary', vehicles: @vehicles %>
      <div class="ui hidden divider"></div>
      <p>placeholder for houses and other assets</p>
    </div>
  </div>
</div>
