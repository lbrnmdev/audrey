<div class="ui grid container">

  <div class="row">
      <div class="sixteen wide mobile eight wide tablet eight wide computer column">

        <div class="ui header">
          <i class="file text icon"></i>
          <div class="content">
            Edit Policy
            <div class="sub header">
              Edit Policy information
            </div>
          </div>
        </div>

        <div class="ui clearing divider"></div>

        <% if @policy.expired? %>
          <div class="ui warning icon message">
            <i class="icons">
              <i class="huge red dont icon"></i>
              <i class="big black file text icon"></i>
            </i>
            <div class="content">
              <div class="header">
                EXPIRED
              </div>
              <p>Policy's end date has passed</p>
            </div>
          </div>
        <% end %>

        <%= render 'policy_form', policy: @policy, action: 'Save changes' %>

        <div class="ui divider"></div>

        <div class="ui inverted clearing segment">
          <h5 class="ui red inverted header">
            Delete policy
            <div class="sub header">
              This action permanently removes this policy from the database.
              You will lose all related policy data
            </div>
          </h5>
          <%= link_to @policy, method: :delete, data: {confirm: "Are you sure you want to delete this policy?"}, class:'ui inverted right floated red basic button' do %>
            <i class="icon trash"></i>
            Delete this policy
          <% end %>
        </div>

      </div>
  </div>

</div>
