<div class="ui grid container">

  <div class="row">
    <div class="sixteen wide mobile eight wide tablet eight wide computer column">

      <div class="ui header">
        <i class="car icon"></i>
        <div class="content">
          Edit Vehicle
          <div class="sub header">
            Edit Vehicle information
          </div>
        </div>
      </div>

      <%= render 'vehicle_form', vehicle: @vehicle, action: 'Save changes' %>

      <div class="ui divider"></div>

      <div class="ui inverted clearing segment">
        <h5 class="ui red inverted header">
          Delete vehicle
          <div class="sub header">
            This action permanently removes this vehicle from the database.
            You will lose all related vehicle data
          </div>
        </h5>
        <%= link_to @vehicle, method: :delete, data: {confirm: "Are you sure you want to delete this vehicle?"}, class:'ui inverted right floated red basic button' do %>
          <i class="icon trash"></i>
          Delete this vehicle
        <% end %>
      </div>

    </div>
  </div>

</div>
